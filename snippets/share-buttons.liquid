{% comment %}
  @param social_url {String}
    URL to share

  @param social_title {Object}
    If sending data to a service, description or title to share

  @param social_image {String|Boolean}
    If sending data to a service, URL of image to share, or false for no image
{% endcomment %}

{% assign share_url = social_url | url_param_escape %}
{% assign share_title = social_title | url_param_escape %}
{% assign share_image = false %}
{% if social_image %}
  {% assign share_image = social_image | url_param_escape %}
{% endif %}

<style>
  .share-buttons--list {
    display: flex;
    gap: 8px;
  }

  .share-buttons img {
    border-radius: 0px;
  }

  .share-buttons--instagram {
    width: 16px !important;
    height: 16px !important;
    margin-bottom: 0px !important;
  }

  .share-buttons--facebook {
    width: 16px !important;
    height: 16px !important;
    margin-bottom: 0px !important;
  }

  .share-buttons--linkedin {
    width: 16px !important;
    height: 16px !important;
    margin-bottom: 0px !important;
  }

  .share-buttons--instagram::before {
    display: none;
  }

  .share-buttons--facebook::before {
    display: none;
  }

  .share-buttons--linkedin::before {
    display: none;
  }

  .share-buttons--title {
    color: {{ settings.color_main_black }};
    font-family: 'Playfair Display';
    font-size: 16px;
    font-weight: normal !important;
  }

  .share-buttons--button share-buttons--linkedin {
    background: white;
    border-radius: 0px !important;
  }
</style>

<aside class="share-buttons" aria-label="{{ snippet_title | t }}">

  <span class="share-buttons--title">
    {{ snippet_title | t }}
  </span>
  
  <div class="share-buttons--list">
    <a
      class="share-buttons--button share-buttons--instagram"
      target="_blank"
      href={{ settings.social_instagram }}>
    >
      {%-
        render 'social-icon',
        id: 'instagram'
      -%}
      <span class="visually-hidden">{{ 'general.accessibility.share_on_instagram' | t }}</span>
    </a>
    
    <a
      class="share-buttons--button share-buttons--facebook"
      target="_blank"
      href={{ settings.social_facebook }}>
      {%-
        render 'social-icon',
        id: 'facebook'
      -%}
      <span class="visually-hidden">{{ 'general.accessibility.share_on_facebook' | t }}</span>
    </a>

    <a
      class="share-buttons--button share-buttons--linkedin"
      target="_blank"
      href={{ settings.social_linkedin }}>
      {%-
        render 'social-icon',
        id: 'linkedin'
      -%}
      <span class="visually-hidden">{{ 'general.accessibility.share_on_linkedin' | t }}</span>
    </a>
  </div>
</aside>
